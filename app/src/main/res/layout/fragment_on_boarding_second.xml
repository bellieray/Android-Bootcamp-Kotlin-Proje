<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.OnBoardingSecond">

    <Button
        android:id="@+id/buttonSecondBoard"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="85dp"
        android:layout_height="47dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="84dp"
        android:text="Geç"
        android:textAllCaps="false"
        android:textColor="#dbab09"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.106"
        app:strokeColor="#dbab09"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="322dp"
        android:layout_height="246dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="55dp"
        android:src="@drawable/onlineshopping"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="342dp"
        android:layout_height="39dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/robotomediumitalic"
        android:gravity="center_horizontal"
        android:text="Kolayca Kategorilendir"
        android:textFontWeight="1000"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="379dp"
        android:layout_height="54dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="208dp"
        android:fontFamily="@font/robotomediumitalic"
        android:gravity="center_horizontal"
        android:text="Harcamalarınızı kategorileyerek daha kolay takip edin"
        android:textFontWeight="1000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>