<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.OnBoardingFirst">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="321dp"
        android:layout_height="338dp"
        android:src="@drawable/person"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.238" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="384dp"
        android:layout_height="22dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="41dp"

        android:layout_marginBottom="10dp"
        android:fontFamily="@font/robotomediumitalic"
        android:gravity="center_horizontal|top"
        android:text="Karşınızda Harcama Takip Uygulaması"
        android:textFontWeight="1000"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="332dp"
        android:layout_height="30dp"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/caviardreamsbolditalic"
        android:gravity="center_horizontal|top"
        android:text="Artık karışıklığa son !"
        android:textFontWeight="1000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/buttonFirstBoard"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="85dp"
        android:layout_height="47dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="84dp"
        android:text="Geç"
        android:textAllCaps="false"
        android:textColor="#dbab09"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#dbab09"
        app:strokeWidth="2dp" />
</androidx.constraintlayout.widget.ConstraintLayout>