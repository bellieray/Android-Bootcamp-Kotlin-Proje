<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.OnBoardingThird">

 <pl.droidsonroids.gif.GifImageView
     android:id="@+id/gifImageView"
     android:layout_width="379dp"
     android:layout_height="216dp"
     android:layout_marginTop="160dp"
     android:layout_marginBottom="28dp"
     android:background="@drawable/giphy"
     app:layout_constraintBottom_toTopOf="@+id/textView5"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent">

 </pl.droidsonroids.gif.GifImageView>

 <Button
     android:id="@+id/buttonThirdBoard"
     style="@style/Widget.MaterialComponents.Button.OutlinedButton"
     android:layout_width="85dp"
     android:layout_height="47dp"
     android:layout_marginEnd="6dp"
     android:layout_marginBottom="84dp"
     android:text="Geç"
     android:textAllCaps="false"
     android:textColor="#dbab09"
     app:cornerRadius="20dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:strokeColor="#dbab09"
     app:strokeWidth="2dp" />

 <TextView
     android:id="@+id/textView5"
     android:layout_width="0dp"
     android:layout_height="43dp"
     android:layout_marginStart="16dp"
     android:layout_marginEnd="16dp"
     android:layout_marginBottom="50dp"
     android:fontFamily="@font/robotomediumitalic"
     android:text="Farklı Para Birimleriyle Takip Et"
     android:textFontWeight="1000"
     android:textSize="25dp"
     app:layout_constraintBottom_toTopOf="@+id/textView6"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/gifImageView" />

 <TextView
     android:id="@+id/textView6"
     android:layout_width="0dp"
     android:layout_height="90dp"
     android:layout_marginStart="45dp"
     android:layout_marginEnd="45dp"
     android:layout_marginBottom="192dp"
     android:fontFamily="@font/robotomediumitalic"
     android:gravity="center_horizontal|top"
     android:text="Harcamalarınızı TL, Dolar, Euro, Sterlin, para birimleriyle sürekli güncellenen kurla takip edin !"
     android:textFontWeight="900"
     android:textSize="18dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>